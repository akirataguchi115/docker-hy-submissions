version: "3.5"

services:
  backend:
    build: ./ml-kurkkumopo-backend
    volumes:
      - model:/src/model
    depends_on: 
      - training
    ports:
      - 5000:5000
  front-end:
    build: ./ml-kurkkumopo-frontend
    ports:
      - 3000:3000
  training:
    build: ./ml-kurkkumopo-training
    volumes:
      - model:/src/model
      - ./images:/src/imgs
volumes: 
  model:
